<?xml version="1.0" encoding="ISO-8859-1"?>
<testCase>
    <name>Get annotation - Null class</name>
    <description>Tests the method "get annotation" with null class.</description>
    <steps>
        <step class="org.dejava.component.util.test.model.TestStep">
            <name>Get annotation - Static call with null class</name>
            <description>Calls the "get annotation" method from the static class with null class and expects a given exception.</description>
            <method>
                <staticMethodClass>org.dejava.component.util.reflection.handler.AnnotationHandler</staticMethodClass>
                <name>getAnnotation</name>
                <parametersClasses>
                    <parameterClass class="java.lang.Class">java.lang.Class</parameterClass>
                    <parameterClass class="java.lang.Class">java.lang.Class</parameterClass>
                </parametersClasses>
                <parametersValues>
                    <parameterValue>#{null}</parameterValue>
                    <parameterValue class="java.lang.Class">org.dejava.component.util.reflection.test.annotation.auxiliary.AnnotationK</parameterValue>
                </parametersValues>
                <expectedException>
                    <name>EmptyParameterException</name>
                    <message>reflection.class.empty</message>
                </expectedException>
            </method>
        </step>
    </steps>
</testCase>