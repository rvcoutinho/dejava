<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="how">
		<pattern value="/como-funciona" />
		<view-id value="/how.jsf" />
	</url-mapping>
	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/index.jsf" />
	</url-mapping>
	<url-mapping id="privacy">
		<pattern value="/privacidade" />
		<view-id value="/privacy.jsf" />
	</url-mapping>
	<url-mapping id="project">
		<pattern value="/projeto/#{projectId : projectController.projectId}" />
		<view-id value="/project.jsf" />
	</url-mapping>
	<url-mapping id="projects">
		<pattern value="/ideias-projetos" />
		<view-id value="/projects.jsf" />
	</url-mapping>
	<url-mapping id="projects-category">
		<pattern value="/ideias-projetos/c/#{category : projectsController.category}" />
		<view-id value="/projects.jsf" />
	</url-mapping>
	<url-mapping id="projects-tag">
		<pattern value="/ideias-projetos/t/#{tag : projectsController.tag}" />
		<view-id value="/projects.jsf" />
	</url-mapping>
	<url-mapping id="ideas">
		<pattern value="/ideias" />
		<view-id value="/ideas.jsf" />
	</url-mapping>
	<url-mapping id="plannedProjects">
		<pattern value="/projetos" />
		<view-id value="/planned-projects.jsf" />
	</url-mapping>
	<url-mapping id="ongoingProjects">
		<pattern value="/acontecendo" />
		<view-id value="/ongoing-projects.jsf" />
	</url-mapping>
	<url-mapping id="me">
		<pattern value="/u" />
		<view-id value="/user.jsf" />
	</url-mapping>
	<url-mapping id="notifications">
		<pattern value="/u/notificacoes" />
		<view-id value="/notifications.jsf" />
	</url-mapping>
	<url-mapping id="user">
		<pattern value="/u/#{username : userController.username}" />
		<view-id value="/user.jsf" />
	</url-mapping>
	<url-mapping id="who">
		<pattern value="/quem-somos" />
		<view-id value="/who.jsf" />
	</url-mapping>
	<url-mapping id="soupsocial">
		<pattern value="/soupsocial" />
		<view-id value="/what.jsf" />
	</url-mapping>
	<url-mapping id="terms">
		<pattern value="/termos" />
		<view-id value="/terms.jsf" />
	</url-mapping>

</pretty-config>